<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
           
           <bean class="com.xworkz.footwear.Footwear" id="footwear">
           <constructor-arg name="brand" value="Bata"/>
           <constructor-arg name="color" value="Black"/>
           <constructor-arg name="price" value="200"/>
           <constructor-arg name="material" ref="material"/>
           </bean>
           
            <bean class="com.xworkz.footwear.Material" id="material">
           <constructor-arg name="plastic" value="Polyvinyl"/>
           <constructor-arg name="cloth" value="Nylon"/>
           <constructor-arg name="rubber" value="Crepe"/>
           </bean>
</beans>